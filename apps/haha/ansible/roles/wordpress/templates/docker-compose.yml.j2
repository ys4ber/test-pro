services:
  database:
    image: mariadb:10.6.4-focal
    restart: unless-stopped
    container_name: "{{ container_prefix }}_database"
    ports:
      - "{{ mysql_port }}:3306"
    env_file: .env
    environment:
      MYSQL_ROOT_PASSWORD: '${MYSQL_ROOT_PASSWORD}'
      MYSQL_DATABASE: '${MYSQL_DATABASE}'
      MYSQL_USER: '${MYSQL_USER}'
      MYSQL_PASSWORD: '${MYSQL_PASSWORD}'
    volumes:
      - {{ container_prefix }}_db_data:/var/lib/mysql
    networks:
      - {{ container_prefix }}_network

  phpmyadmin:
    image: phpmyadmin/phpmyadmin
    restart: unless-stopped
    container_name: "{{ container_prefix }}_phpmyadmin"
    depends_on:
      - database
    ports:
      - "{{ phpmyadmin_port }}:80"
    env_file: .env
    environment:
      PMA_HOST: database
      MYSQL_ROOT_PASSWORD: '${MYSQL_ROOT_PASSWORD}'
    networks:
      - {{ container_prefix }}_network

  wordpress:
    image: wordpress:fpm
    restart: unless-stopped
    container_name: "{{ container_prefix }}_wordpress"
    depends_on:
      - database
    env_file: .env
    environment:
      WORDPRESS_DB_HOST: database:3306
      WORDPRESS_DB_NAME: '${MYSQL_DATABASE}'
      WORDPRESS_DB_USER: '${MYSQL_USER}'
      WORDPRESS_DB_PASSWORD: '${MYSQL_PASSWORD}'
    volumes:
      - {{ container_prefix }}_wp_data:/var/www/html
      # Split wp-content into separate mounts for better control
      - ./wp-content/themes:/var/www/html/wp-content/themes
      - ./wp-content/uploads:/var/www/html/wp-content/uploads
      # Use persistent volume for plugins (not tracked in git)
      - {{ container_prefix }}_plugins:/var/www/html/wp-content/plugins
      # PHP configuration
      - ./php-conf/uploads.ini:/usr/local/etc/php/conf.d/uploads.ini
    networks:
      - {{ container_prefix }}_network

  nginx:
    image: nginx:alpine
    restart: unless-stopped
    container_name: "{{ container_prefix }}_nginx"
    depends_on:
      - wordpress
    ports:
      - "{{ wordpress_port }}:80"
    volumes:
      - {{ container_prefix }}_wp_data:/var/www/html:ro
      # Mirror the same wp-content mounts as wordpress
      - ./wp-content/themes:/var/www/html/wp-content/themes:ro
      - ./wp-content/uploads:/var/www/html/wp-content/uploads:ro
      - {{ container_prefix }}_plugins:/var/www/html/wp-content/plugins:ro
      - ./nginx.conf:/etc/nginx/conf.d/default.conf:ro
    networks:
      - {{ container_prefix }}_network

  wpcli:
    image: wordpress:cli
    container_name: "{{ container_prefix }}_wpcli"
    depends_on:
      - wordpress
      - database
    entrypoint: wp
    env_file: .env
    environment:
      WORDPRESS_DB_HOST: database:3306
      WORDPRESS_DB_NAME: '${MYSQL_DATABASE}'
      WORDPRESS_DB_USER: '${MYSQL_USER}'
      WORDPRESS_DB_PASSWORD: '${MYSQL_PASSWORD}'
    networks:
      - {{ container_prefix }}_network
    volumes:
      - {{ container_prefix }}_wp_data:/var/www/html
      # Same wp-content mounts for WP-CLI access
      - ./wp-content/themes:/var/www/html/wp-content/themes
      - ./wp-content/uploads:/var/www/html/wp-content/uploads
      - {{ container_prefix }}_plugins:/var/www/html/wp-content/plugins

volumes:
  {{ container_prefix }}_db_data:
  {{ container_prefix }}_wp_data:
  {{ container_prefix }}_plugins:  # New persistent volume for plugins

networks:
  {{ container_prefix }}_network:
    driver: bridge